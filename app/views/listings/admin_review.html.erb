<%= render partial: "shared/header_small" %>

<div class="container">

  <% if current_user %>

    <%= render partial: "review_listing" %>

    <hr />

    <h4>Look good?</h4>

<%= form_for @listing, url: listing_approve_path(@listing) do |f| %>

      <%= f.label :approved %>:
      Yes <%= f.radio_button("approved", "1") %>
      No <%= f.radio_button("approved", "0") %> <br>
      Reason for rejection (optional) <br>
      <%= f.text_area :message_to_submitter %>
   <%= f.submit "Save" %>

<% end %>


    <%= link_to "Cancel", admin_path, class: "btn pull-right clearfix" %>

  <% else %>

   <%= link_to "Log In", login_path, class: "btn pull-right clearfix" %>

  <% end %>
</div>
